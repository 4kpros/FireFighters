<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/motion_layout_profile"
    app:layoutDescription="@xml/page_profile_connexion_scene">
    <ScrollView
        android:id="@+id/scroll_sign_in"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:alpha="1"
        style="@style/ScrollView"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_sign_in_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Connection"
                android:textColor="@color/purple_200"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_sign_in_mail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:hint="Mail"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:errorEnabled="true"
                android:soundEffectsEnabled="true"
                app:hintAnimationEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_sign_in_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_sign_in_mail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:layerType="software"
                    app:textInputLayoutFocusedRectEnabled="true"
                    android:nextFocusDown="@id/text_input_layout_sign_in_password" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_sign_in_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:hint="Password"
                android:maxLines="1"
                app:endIconMode="password_toggle"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:textStyle="normal"
                app:errorEnabled="true"
                android:soundEffectsEnabled="true"
                app:hintAnimationEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_sign_in_mail">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_sign_in_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:nextFocusDown="@id/button_sign_in" />
            </com.google.android.material.textfield.TextInputLayout>
            <LinearLayout
                android:id="@+id/linear_remember_forgot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintLeft_toLeftOf="@+id/text_input_layout_sign_in_password"
                app:layout_constraintRight_toRightOf="@+id/text_input_layout_sign_in_password"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_sign_in_password"
                android:padding="5dp"
                >
                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/checkbox_remember_me"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Remember me"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:maxLength="16"
                    android:layout_gravity="center_vertical|start"
                    android:gravity="center_vertical|start"
                    />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_forgot_password"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:rippleColor="@color/light_300"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:autoLink="all"
                    android:ellipsize="end"
                    android:linksClickable="true"
                    android:maxLines="1"
                    android:text="Forgot password ? "
                    android:textAllCaps="false"
                    android:textColor="@color/blue_200"
                    android:layout_gravity="center_vertical|end"
                    android:gravity="center_vertical|end" />
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:text="Connect"
                app:cornerRadius="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linear_remember_forgot" />
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progress_circular_connexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@+id/button_sign_in"
                app:layout_constraintRight_toRightOf="@+id/button_sign_in"
                app:layout_constraintTop_toTopOf="@+id/button_sign_in"
                app:layout_constraintBottom_toBottomOf="@+id/button_sign_in"
                app:indicatorColor="@color/purple_200"
                />
            <RelativeLayout
                android:id="@+id/relative_go_to_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_sign_in"
                android:gravity="center"
                android:layout_marginTop="5dp"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_no_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:text="Don't have account ?"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_go_to_sign_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:rippleColor="@color/light_300"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:autoLink="all"
                    android:ellipsize="end"
                    android:linksClickable="true"
                    android:maxLines="1"
                    android:text="Sign up"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_200"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_toEndOf="@+id/text_no_account"
                    android:layout_toRightOf="@+id/text_no_account" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <ScrollView
        android:id="@+id/scroll_sign_up"
        android:layout_width="0.01dp"
        android:layout_height="0.01dp"
        android:alpha="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        style="@style/ScrollView"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_sign_up_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="Create account"
                android:textColor="@color/purple_200"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_sign_up_user_name"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:hint="User name"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:errorEnabled="true"
                android:soundEffectsEnabled="true"
                app:hintAnimationEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_sign_up_title">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_sign_up_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:nextFocusDown="@id/text_input_layout_sign_up_mail" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_sign_up_mail"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:hint="Mail"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:errorEnabled="true"
                android:soundEffectsEnabled="true"
                app:hintAnimationEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_sign_up_user_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_sign_up_mail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:nextFocusDown="@id/text_input_layout_sign_up_password" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_sign_up_password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:hint="Password"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:textStyle="normal"
                app:errorEnabled="true"
                android:soundEffectsEnabled="true"
                app:endIconMode="password_toggle"
                app:hintAnimationEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_sign_up_mail">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_sign_up_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:endIconMode="password_toggle"
                    android:inputType="textPassword"
                    android:nextFocusDown="@id/text_input_layout_sign_up_password_repeat" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_input_layout_sign_up_password_repeat"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:hint="Repeat Password"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="14sp"
                app:endIconMode="password_toggle"
                android:textStyle="normal"
                app:errorEnabled="true"
                android:soundEffectsEnabled="true"
                app:hintAnimationEnabled="true"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_sign_up_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/text_input_sign_up_password_repeat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPassword"
                    android:nextFocusDown="@id/button_sign_up" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Validate"
                app:cornerRadius="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/text_input_layout_sign_up_password_repeat" />
            <RelativeLayout
                android:id="@+id/relative_go_to_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/button_sign_up"
                android:gravity="center"
                android:layout_marginTop="5dp"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/text_have_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:text="Have an account ? "/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_go_to_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:rippleColor="@color/light_300"
                    android:layout_marginRight="10dp"
                    android:layout_marginEnd="10dp"
                    android:autoLink="all"
                    android:ellipsize="end"
                    android:linksClickable="true"
                    android:maxLines="1"
                    android:text="Sign in"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_200"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_toEndOf="@+id/text_have_account"
                    android:layout_toRightOf="@+id/text_have_account" />
            </RelativeLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.motion.widget.MotionLayout>
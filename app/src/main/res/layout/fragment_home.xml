<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragments.HomeFragment"
        style="@style/CustomShapeGradient">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/text_home_title"
            app:layout_constraintLeft_toLeftOf="@+id/text_home_title"
            app:layout_constraintRight_toRightOf="@+id/text_home_title"
            style="@style/CustomShapeSecondaryRoundedBottom"></RelativeLayout>

        <ImageView
            android:id="@+id/button_image_bluetooth"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/ripple_circle"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_baseline_bluetooth_24"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/text_home_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/button_image_bluetooth"
            app:layout_constraintRight_toLeftOf="@+id/button_image_settings"
            android:layout_margin="10dp"
            android:text="     HOME     "
            android:textStyle="bold"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/button_image_settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="10dp"
            android:background="@drawable/ripple_circle"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_outline_settings_24"
            android:padding="5dp"
            android:clickable="true"
            android:focusable="true" />

        <RelativeLayout
            android:id="@+id/relative_help_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_image_settings"
            app:layout_constraintBottom_toTopOf="@+id/relative_home_bottom">

            <TextView
                android:id="@+id/text_call_number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No connection ?"
                android:textSize="18sp"
                android:gravity="center"
                style="@style/CustomCleanTextColor"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/text_call_number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No problem, contact directly !"
                android:textSize="18sp"
                android:gravity="center"
                style="@style/CustomCleanTextColor"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text_call_number1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_call_number2"
                android:orientation="horizontal"
                android:layout_centerInParent="true">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_call_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:rippleColor="@color/light_300"
                    android:text="Call now"
                    android:layout_margin="10dp"
                    android:autoLink="all"
                    android:ellipsize="end"
                    android:linksClickable="true"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:textColor="@color/green_300"
                    app:icon="@drawable/ic_baseline_call_24"
                    app:iconTint="@color/green_300" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_sms_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    app:rippleColor="@color/light_300"
                    android:text="SMS"
                    android:layout_margin="10dp"
                    android:autoLink="all"
                    android:ellipsize="end"
                    android:linksClickable="true"
                    android:maxLines="1"
                    android:maxLength="10"
                    android:textColor="@color/purple_200"
                    app:icon="@drawable/ic_round_message_24"
                    app:iconTint="@color/purple_200" />
            </LinearLayout>
        </RelativeLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/relative_home_bottom"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardElevation="0dp"
            app:cardCornerRadius="100dp"
            app:cardBackgroundColor="@color/transparent">

            <LinearLayout
                android:id="@+id/relative_sos_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/circle_shape_sos_gradient"
                android:orientation="vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <TextView
                    android:id="@+id/button_text_sos"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SOS"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:maxLines="1"
                    android:ellipsize="end"
                    style="@style/CustomRippleSos" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/text_keep_calm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/relative_home_bottom"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="KEEP CALM !"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/red_200"
            android:maxLines="1"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/text_indication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_keep_calm"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="After pressing SOS button you will get help in approx. 10 minutes."
            android:textSize="14sp"
            android:maxLines="4"
            android:ellipsize="end"
            android:gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_indication"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:padding="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_show_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                app:rippleColor="@color/light_300"
                android:layout_centerHorizontal="true"
                android:text="Map view"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autoLink="all"
                android:ellipsize="end"
                android:linksClickable="true"
                android:maxLines="1"
                android:textColor="@color/blue_200"
                app:icon="@drawable/ic_baseline_keyboard_arrow_up_24"
                app:iconTint="@color/blue_200"
                app:iconGravity="top" />
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>